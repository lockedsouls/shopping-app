{
    "include": ["_src/**/*"],
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "rootDir": "./_src",
      "outDir": "./_dist",
      "removeComments": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "noImplicitReturns": true
    }
}